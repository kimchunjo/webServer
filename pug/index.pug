        // 검색 기능
        .container.py-6.py-md-7.text-white.z-index-20
            .row
                .col-xl-10
                    .text-center.text-lg-left
                        p.subtitle.letter-spacing-4.mb-2.text-secondary.text-shadow 당신의 삶을 특별하게 해줄
                        h1.display-3.font-weight-bold.text-shadow 세상의 모든 장소
                    
                    .search-bar.mt-5.p-3.p-lg-1.pl-lg-4
                        form(action="/category")
                            .row
                                .col-lg-5.d-flex.align-items-center.form-group
                                    input.form-control.border-0.shadow-0(type="text", name="search", placeholder="내 취향에 맞는 장소")
                                .col-lg-4.d-flex.align-items-center.form-group
                                    .input-label-absolute.input-label-absolute-right.w-100
                                        label.label-absolute(for="location")
                                            i.fa.fa-crosshairs
                                            span.sr-only City
                                        input.form-control.border-0.shadow-0(type="text", name="location", placeholder="내 주변" id="location")
                                        input.form-control.d-none(type="text" name="lat" class="index_latitude" id="lat")
                                        input.form-control.d-none(type="text" name="lon" class="index_longitude" id="lon")
